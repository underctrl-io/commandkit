{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "inlineSourceMap": true,
    "target": "ES2020",
    "module": "CommonJS",
    "noEmit": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
